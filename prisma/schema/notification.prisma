model Notification {
    id             String           @id @default(uuid())
    recipientEmail String
    recipientRole  UserRole
    type           NotificationType
    title          String
    message        String
    link           String?
    isRead         Boolean          @default(false)
    createdAt      DateTime         @default(now())

    @@index([recipientEmail, isRead, createdAt])
    @@map("notifications")
}
