NODE_ENV=development 

# Enables deterministic verifier hooks (used by scripts/api-verify.mjs)
ENABLE_TEST_ENDPOINTS=0

# Disable global API rate limiting (useful for local verification / CI)
DISABLE_RATE_LIMIT=0

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

PORT=5000 

DATABASE_URL=YOUR_REMOTE_DATABASE_URL

SALT_ROUND=10 

JWT_SECRET= 

REFRESH_TOKEN_SECRET= 

EXPIRES_IN=7d 

REFRESH_TOKEN_EXPIRES_IN=1y 

EMAIL=YOUR_GMAIL_FOR_EMAIL 

APP_PASS=YOUR_GMAIL_APP_PASSWORD

RESET_PASS_LINK=http://localhost:3000/reset-password 

RESET_PASS_TOKEN= 

RESET_PASS_TOKEN_EXPIRES_IN=5m 

CLOUDINARY_CLOUD_NAME=

CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# stripe key
STRIPE_SECRET_KEY=

# opendriver key
OPENROUTER_API_KEY =

STRIPE_WEBHOOK_SECRET=

## CORS allowed origins
# Comma-separated list of allowed frontend origins.
# Local dev:
FRONTEND_URL=http://localhost:3000
# Production example (your deployed frontend):
# FRONTEND_URL=https://health-care-client-rust.vercel.app

# Swagger server URL shown in /docs (Try it out). Leave empty to use the same origin.
SWAGGER_SERVER_URL=

# Production example (your deployed backend):
# SWAGGER_SERVER_URL=https://health-care-server-gamma.vercel.app
